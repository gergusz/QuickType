<?xml version="1.0" encoding="utf-8"?>
<winUiEx:WindowEx
    x:Class="QuickType.WinUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:QuickType"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:winUi="using:CommunityToolkit.WinUI"
    xmlns:winUiEx="using:WinUIEx"
    mc:Ignorable="d"
    Title="QuickType">

    <Page>
        <Page.Resources>
            <x:Double x:Key="SettingsCardSpacing">4</x:Double>

            <Style x:Key="SettingsSectionHeaderTextBlockStyle"
                   BasedOn="{StaticResource BodyStrongTextBlockStyle}"
                   TargetType="TextBlock">
                <Style.Setters>
                    <Setter Property="Margin" Value="1,30,0,6" />
                </Style.Setters>
            </Style>
        </Page.Resources>

        <ScrollViewer>
            <Grid>
                <StackPanel MaxWidth="1000"
                    HorizontalAlignment="Stretch"
                    Spacing="{StaticResource SettingsCardSpacing}">
                    <StackPanel.ChildrenTransitions>
                        <EntranceThemeTransition FromVerticalOffset="50"/>
                        <RepositionThemeTransition IsStaggeringEnabled="True"/>
                    </StackPanel.ChildrenTransitions>
                    <TextBlock Style="{StaticResource SettingsSectionHeaderTextBlockStyle}" Text="Szolgáltatás"/>
                    <controls:SettingsExpander Header="Háttérszolgáltatás"
                                      HeaderIcon="{winUi:FontIcon Glyph=&#xE9F5;}"
                                      Description=""
                                      x:Name="BackgroundServiceStatus">
                        <controls:SettingsExpander.Items>
                            <controls:SettingsCard Header="Indítás rendszerrel együtt"
                                          HeaderIcon="{winUi:FontIcon Glyph=&#xE770;}">
                                <ToggleSwitch IsOn="{x:Bind Settings.StartWithWindows, Mode=TwoWay}"/>
                            </controls:SettingsCard>
                        </controls:SettingsExpander.Items>
                    </controls:SettingsExpander>
                    <TextBlock Style="{StaticResource SettingsSectionHeaderTextBlockStyle}" Text="Nyelv"/>
                    <controls:SettingsExpander Header="Betöltött nyelvek">
                    </controls:SettingsExpander>
                    <controls:SettingsExpander Header="Beépített nyelvek" HeaderIcon="{winUi:FontIcon Glyph=&#xF2B7;}" IsEnabled="False">
                        <controls:SettingsExpander.Items>
                            <controls:SettingsCard Header="Magyar nyelv">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <Button x:Name="LoadHungarianButton" 
                                            Content="Betöltés" 
                                            Click="LoadHungarianButton_Click"
                                            Visibility="{x:Bind IsHungarianNotLoaded, Mode=OneWay}"/>
                                    <Button x:Name="UnloadHungarianButton" 
                                            Content="Eltávolítás" 
                                            Click="UnloadHungarianButton_Click"
                                            Visibility="{x:Bind IsHungarianLoaded, Mode=OneWay}"/>
                                </StackPanel>
                            </controls:SettingsCard>
                            <controls:SettingsCard Header="Angol nyelv">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <Button x:Name="LoadEnglishButton" 
                                            Content="Betöltés" 
                                            Click="LoadEnglishButton_Click"
                                            Visibility="{x:Bind IsEnglishNotLoaded, Mode=OneWay}"/>
                                    <Button x:Name="UnloadEnglishButton" 
                                            Content="Eltávolítás" 
                                            Click="UnloadEnglishButton_Click"
                                            Visibility="{x:Bind IsEnglishLoaded, Mode=OneWay}"/>
                                </StackPanel>
                            </controls:SettingsCard>
                        </controls:SettingsExpander.Items>
                    </controls:SettingsExpander>
                    <controls:SettingsCard Header="Saját nyelv hozzáadása">
                        <Button Content="Hozzáadás" Click="AddCustomLanguage_OnClick"></Button>
                    </controls:SettingsCard>
                    <TextBlock Style="{StaticResource SettingsSectionHeaderTextBlockStyle}" Text="Ajánlatok"/>
                    <controls:SettingsExpander Header="Ajánlatok" HeaderIcon="{winUi:FontIcon Glyph=&#xE82F;}">
                        <controls:SettingsExpander.Items>
                            <controls:SettingsCard Header="Maximum ajánlott szó darabszáma" Description="Előfordulhat kevesebb ajánlat is">
                                <Slider StepFrequency="1" Minimum="1" Maximum="10" Value="{x:Bind Settings.MaxSuggestions, Mode=TwoWay}"></Slider>
                            </controls:SettingsCard>
                            <controls:SettingsCard Header="Indexelés kezdése egynél" Description="Ajánlatoknál az első elem a billentyűzeten az `1`-es számbillentyűnek feleljen meg, vagy a `0`-ásnak">
                                <ToggleSwitch IsOn="{x:Bind Settings.StartAtOne, Mode=TwoWay}"></ToggleSwitch>
                            </controls:SettingsCard>
                            <controls:SettingsCard Header="Ékezetek javítása" Description="Mutasson-e ajánlatokat ékezettől függetlenül (Ékezeteket nem tartalmazó nyelveknél nem csinál semmit sem)">
                                <ToggleSwitch IsOn="{x:Bind Settings.IgnoreAccent, Mode=TwoWay}"></ToggleSwitch>
                            </controls:SettingsCard>
                        </controls:SettingsExpander.Items>
                    </controls:SettingsExpander>
                </StackPanel>
                <Grid x:Name="LoadingOverlay" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Opacity="0.7">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <ProgressRing IsActive="True" Width="50" Height="50"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </ScrollViewer>

    </Page>

    <winUiEx:WindowEx.SystemBackdrop>
        <MicaBackdrop/>
    </winUiEx:WindowEx.SystemBackdrop>
</winUiEx:WindowEx>
